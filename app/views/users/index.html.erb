<h1>Users</h1>

<%= link_to 'New user', new_user_path %>

<table>
  <tr>
    <th>Email</th>
    <th colspan="2"></th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= link_to 'Show', user_path(user) %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Destroy', user_path(user), method: :delete %></td>
    </tr>
  <% end %>
</table>
